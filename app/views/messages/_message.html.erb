<div class = "mgs">
  <div class = "mgs_info">
    <div class = "post_username">
        <%= message.user.name%>
    </div>
    <div class = "post_date">
        <%= l message.created_at%>
    </div>
  </div>

  <div class = "lower_mgs">
    <div class = "mgs_contents">
      <%= message.content%>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>
</div>